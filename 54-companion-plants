public Boolean companionPlants(String plant1, String plant2) {
    
    if (plant1 == 'lettuce' || plant1 == 'onions' && plant2 == 'cucumbers' || plant2 == 'onions') {
        return true;
    }

    if (plant1 == 'carrots' || plant1 == 'tomatoes' && plant2 == 'onions') {
        return true;
    } else {
        return false;
    }
}